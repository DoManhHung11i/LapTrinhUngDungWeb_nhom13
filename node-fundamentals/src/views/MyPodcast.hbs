<div id="content" style="padding-bottom: 130px;" class="jscontent">
  <div class="recent" style="background: linear-gradient(rgb(100, 56, 105), rgb(17, 73, 74) 90%);">
    <div class="list_contain">
      <div class="recent_title">
        <div class="titlelist" style="color: aliceblue;">My Podcasts</div>
        <div class="subtitle" style="color: beige;">Sorted by most recently updated.</div>
      </div>
      <div class="decorlist">
        {{#each esposidesObjects}}
        <div class="inlinelist" style="height: 100%; width: 250px;">
          <div class="previewlist" style="margin-left: 10px;margin-bottom: 20px;">
            <div draggable="true" class="artpod" style="width: 183.1px; position: relative;">
              <a class="jsx" href="#">
                <div class="art-wrapper">
                  <img height="400" width="400" src="{{this.image}}" loading="lazy" alt="{{this.title}}" class="artreal">
                </div>
              </a>
            </div>
            <div class="textforart">
              <div class="textinner" style="flex: 1 1 auto;">
                <a aria-label="{{this.title}}" class="arttitle episode_title" style="color: rgb(235, 218, 89); max-width: 200px; display: block; word-wrap: break-word;" href="/podcast/{{this.podcast_id}}/{{this._id}}" data-esposide-id="{{this._id}}" data-user-id="{{../user._id}}">{{this.title}}</a>
                <div class="authorofart" style="color: rgb(51, 212, 174);">{{this.name_author}}</div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
